<?xml version="1.0"?>
<Actions>
  <Action id="UpdateLockState" deviceFilter="self.verisureDoorLockDeviceType">
    <Name>Update Lock Status</Name>
    <CallbackMethod>updateLockState</CallbackMethod>
    <ConfigUI>
      <Field id="new_status" type="menu" defaultValue="">
        <Label>State:</Label>
        <List>
          <Option value="lock">Lock</Option>
          <Option value="unlock">Unlock</Option>
        </List>
      </Field>
    </ConfigUI>
  </Action>

  <Action id="updateLockConfig" deviceFilter="self.verisureDoorLockDeviceType">
    <Name>Update AutoLock State</Name>
    <CallbackMethod>updateLockConfig</CallbackMethod>
    <ConfigUI>
      <Field id="auto_lock_enabled" type="checkbox" defaultValue="False">
        <Label>Automatic Locking:</Label>
      </Field>
    </ConfigUI>
  </Action>

	<Action id="UpdateAlarmStatus" deviceFilter="self.verisureAlarmDeviceType">
    <Name>Update Alarm State</Name>
    <CallbackMethod>updateAlarmStatus</CallbackMethod>
    <ConfigUI>
      <Field id="userPin" type="textfield" defaultValue="" secure="true">
        <Label>Verisure Alarm PIN:</Label>
      </Field>
      <Field id="new_status" type="menu" defaultValue="">
        <Label>State:</Label>
        <List>
            <Option value="ARMED_HOME">Armed Home</Option>
            <Option value="ARMED_AWAY">Armed Away</Option>
            <Option value="DISARMED">Unarmed</Option>
        </List>
      </Field>
    </ConfigUI>
  </Action>

</Actions>
